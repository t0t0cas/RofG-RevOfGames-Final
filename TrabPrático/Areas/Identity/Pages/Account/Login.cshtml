@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4">
        <section>
            <div>
                <img style="border-top: 15px solid transparent; border-bottom: 15px solid transparent; border-right: 50px solid transparent; object-fit: fill; float: right" src="~/fotosjogos/logoLogin.png"
                     width="300"
                     alt="Logo Login"
                     title="LogoRegistar" />
            </div>
            <form id="account" method="post">
                <br/>
                <br/>
                <br/>
                <br/>
                <h4 style="color: white; text-align: center">Use uma conta para entrar.</h4>
                <hr style="background-color: white"/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label style="color: white" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color: white" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label style="color: white" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="textoCor" id="forgot-password" asp-page="./ForgotPassword">Esqueceste-te da senha?</a>
                    </p>
                    <p>
                        <a class="textoCor" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registar como um novo utilizador</a>
                    </p>
                    <p>
                        <a class="textoCor" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
