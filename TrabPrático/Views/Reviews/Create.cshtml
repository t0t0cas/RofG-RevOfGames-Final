@model TrabPrático.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white">Criar</h1>

<h4 style="color:white">Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="color:white" asp-for="NotaReview" class="control-label"></label>
                <input asp-for="NotaReview" class="form-control" />
                <span asp-validation-for="NotaReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden style="color:white" asp-for="DataReview" class="control-label"></label>
                <input hidden asp-for="DataReview" class="form-control" />
                <span hidden asp-validation-for="DataReview" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label style="color:white" class="form-check-label">
                    <input class="form-check-input" asp-for="Visivel" /> @Html.DisplayNameFor(model => model.Visivel)
                </label>
            </div>
            <div class="form-group">
                <label hidden style="color:white" asp-for="UtilizadorFK" class="control-label"></label>
                <select hidden asp-for="UtilizadorFK" class ="form-control" asp-items="ViewBag.UtilizadorFK"></select>
            </div>
            <div class="form-group">
                <label hidden style="color:white" asp-for="JogoFK" class="control-label"></label>
                <select hidden asp-for="JogoFK" class ="form-control" asp-items="ViewBag.JogoFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar á lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
