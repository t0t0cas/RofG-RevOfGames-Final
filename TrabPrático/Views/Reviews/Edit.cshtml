@model TrabPrático.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReview" />
            <div class="form-group">
                <label asp-for="NotaReview" class="control-label"></label>
                <input asp-for="NotaReview" class="form-control" />
                <span asp-validation-for="NotaReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataReview" class="control-label"></label>
                <input asp-for="DataReview" class="form-control" />
                <span asp-validation-for="DataReview" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visivel" /> @Html.DisplayNameFor(model => model.Visivel)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UtilizadorFK" class="control-label"></label>
                <select asp-for="UtilizadorFK" class="form-control" asp-items="ViewBag.UtilizadorFK"></select>
                <span asp-validation-for="UtilizadorFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JogoFK" class="control-label"></label>
                <select asp-for="JogoFK" class="form-control" asp-items="ViewBag.JogoFK"></select>
                <span asp-validation-for="JogoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
