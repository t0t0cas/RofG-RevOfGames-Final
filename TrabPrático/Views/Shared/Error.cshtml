@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 style="color:white" class="text-danger">Erro.</h1>
<h2 style="color:white" class="text-danger">Ocorreu um erro durante o processamento do seu pedido.</h2>

@if (Model.ShowRequestId)
{
    <p  style="color:white" >
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3  style="color:white"  >Modo de desenvolvimento</h3>
<p  style="color:white" >
    Alterar para ambiente de <strong>Desenvolvimento</strong> vai mostrar inforamação mais detalhada acerca do erro ocorrido.
</p>
