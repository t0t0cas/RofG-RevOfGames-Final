@model TrabPrático.Models.Jogos

@{ ViewData["Title"] = "Edit"; }

<div style=" text-align: center; border-top: 20px solid transparent">
    <img style=" width: 380px; height: 70px; object-fit:fill;" src="~/fotosjogos/logoEditar.png"
         title="Lista de Jogos" />
</div>

<hr style=" background-color: white" />
<div class="row">
    <div class="col-md-4">
        @if (User.IsInRole("Gestor"))
        {
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdJogo" />
            <div class="form-group">
                <label style="color:white" asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="CategoriaIdade" class="control-label"></label>
                <input asp-for="CategoriaIdade" class="form-control" />
                <span asp-validation-for="CategoriaIdade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="Imagem" class="control-label"></label>
                <input type="file" name="Imagem" accept=".jpg,.jpeg,.png" style=" color: #64fcfc;" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white" asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Media" class="control-label"></label>
                    <input asp-for="Media" class="form-control" />
                    <span asp-validation-for="Media" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>

<div>
    <a class="textoCor" asp-action="Index">Voltar á lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
